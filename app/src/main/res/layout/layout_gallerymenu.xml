<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_overlay"
    android:id="@+id/gallerydetail_menuouter">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/gallerydetail_menuinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="10dp"
        android:background="#FFEEEEEE">

        <TextView
            android:id="@+id/gallerydetail_menuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작업 선택..."
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:id="@+id/gallerydetail_deleteAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gallerydetail_menuTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="전체 삭제"/>

        <Button
            android:id="@+id/gallerydetail_OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gallerydetail_deleteAll"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="결정"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
