<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameActivity">
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_mid_horizontal"
        android:text="세계 지도나 마커 그림 들어갈 이미지뷰 공간"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/guide_mid_horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"
        android:id="@+id/guide_mid_vertical"/>

    <TextView
        android:id="@+id/textview_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="next: "
        app:layout_constraintBottom_toTopOf="@+id/textview_goal_score"
        app:layout_constraintEnd_toStartOf="@id/guide_mid_vertical"
        app:layout_constraintTop_toBottomOf="@id/guide_mid_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/guide_mid_horizontal"
        app:layout_constraintStart_toEndOf="@id/textview_next"
        android:id="@+id/textview_level"
        android:text="Level 0"/>

    <TextView
        android:id="@+id/textview_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="goal: "
        app:layout_constraintBottom_toBottomOf="@+id/textview_goal_score"
        app:layout_constraintEnd_toStartOf="@id/guide_mid_vertical"
        app:layout_constraintTop_toBottomOf="@id/textview_level" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_level"
        app:layout_constraintStart_toEndOf="@id/guide_mid_vertical"
        android:textSize="35sp"
        android:id="@+id/textview_goal_score"
        android:text="000/0"/>

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_goal_score" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start" />



</android.support.constraint.ConstraintLayout>