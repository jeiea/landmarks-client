<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diary.Diary_mapNPictures">

    <kr.ac.kw.coms.globealbum.map.MyMapView
        android:id="@+id/diary_mapNpics_Map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </kr.ac.kw.coms.globealbum.map.MyMapView>

    <kr.ac.kw.coms.globealbum.album.GroupDiaryView
        android:id="@+id/diary_mapNpics_Pics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_mapNpics_Map">

    </kr.ac.kw.coms.globealbum.album.GroupDiaryView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/diary_mapNpics_Write"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintLeft_toLeftOf="parent">

        <EditText
            android:id="@+id/diary_mapNpics_EditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/diary_mapNpics_EditBody"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="내용"
            app:layout_constraintBottom_toTopOf="@id/diary_mapNpics_EditSave"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diary_mapNpics_EditTitle" />

        <Button
            android:id="@+id/diary_mapNpics_EditSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="diary_onSaveClick"
            android:text="저장"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/diary_mapNpics_EditCancel" />

        <Button
            android:id="@+id/diary_mapNpics_EditCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="diary_onCancelClick"
            android:text="취소"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/diary_mapNpics_Read"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/diary_mapNpics_ReadTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:hint="제목"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/diary_mapNpics_EditStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/diary_mapNpics_EditStart"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/diary_mapNpics_EditStart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:onClick="diary_onEditClick"
            android:text="수정"
            app:layout_constraintLeft_toRightOf="@id/diary_mapNpics_ReadTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/diary_mapNpics_ReadBody"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="내용"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diary_mapNpics_ReadTitle" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>