<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/game_after_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/after_game_vertical_mid_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <android.support.constraint.Guideline
        android:id="@+id/after_game_vertical_right_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.72" />

    <android.support.constraint.Guideline
        android:id="@+id/after_game_vertical_right_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <android.support.constraint.Guideline
        android:id="@+id/after_game_horizontal_up_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/after_game_horizontal_mid_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/after_game_horizontal_down_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/after_game_place_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/after_game_vertical_mid_guideline"
        app:layout_constraintTop_toTopOf="@id/after_game_horizontal_up_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/after_game_show_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/after_game_horizontal_mid_guideline"
        app:layout_constraintLeft_toRightOf="@id/after_game_vertical_mid_guideline"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/after_game_see_picture_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/game_after_see_picture_btn"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/after_game_horizontal_down_guideline"
        app:layout_constraintLeft_toRightOf="@id/after_game_vertical_right_guideline1"
        app:layout_constraintRight_toLeftOf="@id/after_game_see_diary_btn"
        app:layout_constraintTop_toBottomOf="@id/after_game_horizontal_mid_guideline" />

    <ImageView
        android:id="@+id/after_game_see_diary_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/game_after_see_diary_btn"
        app:layout_constraintBottom_toTopOf="@id/after_game_horizontal_down_guideline"
        app:layout_constraintLeft_toRightOf="@id/after_game_see_picture_btn"
        app:layout_constraintRight_toLeftOf="@id/after_game_vertical_right_guideline2"
        app:layout_constraintTop_toBottomOf="@id/after_game_horizontal_mid_guideline" />
</android.support.constraint.ConstraintLayout>