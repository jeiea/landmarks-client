<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 이미지뷰를 한번 선택하고 다른 이미지뷰 클릭시, 기존에 선택되었던 이미지뷰의 테두리 지우기-->
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0dp"
                android:color="#ff0000"/>
        </shape>
    </item>
</layer-list>